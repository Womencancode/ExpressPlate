{
  "name": "express-plate",
  "version": "1.0.0",
  "main": "index.js",
  "author": "digitalstage（http://digitalstage.jp/）",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev src/server/app.ts",
    "serve": "node build/server/app.js",
    "start": "npm run serve",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc && cpx src/server/views/*.ejs build/server/views && rimraf build/client && rimraf build/types",
    "build:client": "webpack --config webpack.config.js",
    "lint": "npm run lint:ts && npm run lint:scss",
    "lint:ts": "eslint src/**/*.ts",
    "lint:scss": "stylelint src/**/*.scss",
    "fmt": "npm run fmt:ts && npm run fmt:scss",
    "fmt:ts": "prettier-eslint --write src/**/*.ts",
    "fmt:scss": "prettier-stylelint --write src/**/*.scss",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "*.ts": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.scss": [
      "prettier-stylelint --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$"
  },
  "prettier": {},
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/helmet": "^0.0.43",
    "@types/jest": "^24.0.15",
    "@types/jquery": "^3.3.29",
    "@types/node": "^12.0.8",
    "@types/sequelize": "^4.28.3",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "autoprefixer": "^9.6.0",
    "cpx": "^1.5.0",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "husky": "^2.4.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.2.1",
    "node-sass": "^4.11.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "sequelize-cli": "^5.5.0",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-prettier": "^1.1.1",
    "stylelint-scss": "^3.8.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.3",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "^3.5.2",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-dev-server": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  },
  "dependencies": {
    "ejs": "^2.6.2",
    "express": "^4.17.1",
    "helmet": "^3.18.0",
    "jquery": "^3.4.1",
    "mysql2": "^1.6.5",
    "reset-css": "^4.0.1",
    "sequelize": "^5.8.10",
    "supertest": "^4.0.2"
  }
}
